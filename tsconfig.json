{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"verbatimModuleSyntax": true,
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"module": "esnext"
	},
	"ts-node": {
		"esm": true
	},
	"include": ["playwright.config.ts", "src/**/*"]
}
