{
	"name": "rodeo",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"test": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"migrate": "prisma migrate dev",
		"deploy": "npx prisma generate && npm run build"
	},
	"pre-commit": [
		"check",
		"lint",
		"migrate"
	],
	"prisma": {
		"seed": "npx esno prisma/seed.ts"
	},
	"devDependencies": {
		"@playwright/test": "^1.28.1",
		"@sveltejs/adapter-auto": "^1.0.0",
		"@sveltejs/adapter-vercel": "^1.0.5",
		"@sveltejs/kit": "^1.0.0",
		"@types/node": "^18.11.18",
		"@types/nodemailer": "^6.4.7",
		"@types/qrcode": "^1.5.0",
		"@typescript-eslint/eslint-plugin": "^5.45.0",
		"@typescript-eslint/parser": "^5.45.0",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"pre-commit": "^1.2.2",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.8.1",
		"svelte": "^3.54.0",
		"svelte-check": "^3.1.4",
		"ts-node": "^10.9.1",
		"tslib": "^2.4.1",
		"typescript": "^4.9.4",
		"vite": "^4.0.0",
		"vitest": "^0.25.3"
	},
	"type": "module",
	"dependencies": {
		"@aws-sdk/client-s3": "^3.267.0",
		"@prisma/client": "^4.7.1",
		"@sendgrid/mail": "^7.7.0",
		"@trpc/client": "^10.7.0",
		"@trpc/server": "^10.7.0",
		"dayjs": "^1.11.7",
		"fuzzysort": "^2.0.4",
		"html5-qrcode": "^2.3.7",
		"nodemailer": "^6.9.1",
		"prisma": "^4.7.1",
		"qrcode": "^1.5.1",
		"superjson": "^1.12.2",
		"svelte-markdown": "^0.2.3",
		"trpc-sveltekit": "^3.2.2",
		"zod": "^3.20.2"
	}
}
